
@{
    ViewData["Title"] = "Update";
}
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *,AuthoringTagHelpers
@model Person

<form method="post" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label>Person Name</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label>Person Surname</label>
            <input asp-for="Surname" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label>Person Age</label>
            <input asp-for="Age" class="form-control" />
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label>Person Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label>Person Password</label>
            <input asp-for="Password" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label>Person Adress</label>
            <input asp-for="Adress" class="form-control" />
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label>Person Position</label>
            <input asp-for="PositionId" class="form-control" />
        </div>
        <div class="col-md-4 mb-3">
            <label>Person Salary</label>
            <input asp-for="SalaryId" class="form-control" />
        </div>
        <div asp-validation-summary="ModelOnly">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>